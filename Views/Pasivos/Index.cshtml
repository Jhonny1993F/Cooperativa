@model IEnumerable<Cooperativa.Models.Pasivos>

@{
    Layout = "~/Views/Shared/AdministradorLayout.cshtml";
}

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.costoPasivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaPasivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costoPasivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaPasivo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.pasivoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.pasivoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.pasivoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
