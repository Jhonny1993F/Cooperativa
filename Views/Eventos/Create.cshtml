@model Cooperativa.Models.Eventos

@{
    Layout = "~/Views/Shared/AdministradorLayout.cshtml";
}

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Eventos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Fecha de Evento</label>
                <input type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                @Html.HiddenFor(m => m.fechaEvento, new { Value = DateTime.Now }) <!-- Campo oculto para la fecha -->
            </div>
            <div class="form-group">
                <label asp-for="tipoEvento" class="control-label"></label>
                <input asp-for="tipoEvento" class="form-control" />
                <span asp-validation-for="tipoEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="costoEvento" class="control-label"></label>
                <input asp-for="costoEvento" class="form-control" />
                <span asp-validation-for="costoEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="detalleEvento" class="control-label"></label>
                <input asp-for="detalleEvento" class="form-control" />
                <span asp-validation-for="detalleEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lugar" class="control-label"></label>
                <input asp-for="lugar" class="form-control" />
                <span asp-validation-for="lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="socio" class="control-label"></label>
                @* <input asp-for="socio" class="form-control" /> *@
                <select asp-for="socio" class="form-control" asp-items="ViewBag.socio"></select>
                <span asp-validation-for="socio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
